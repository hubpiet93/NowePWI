<section id="ikony">
    <div class="container">
        <div class="row">
            <div class="col-xs-6 col-sm-3 col-md-3 col-lg-3">
                <img class="img-responsive" alt="" src="~/Content/Images/css.png" />
            </div>
            <div class="col-xs-6 col-sm-3 col-md-3 col-lg-3">
                <img class="img-responsive" alt="" src="~/Content/Images/html.png" />
            </div>
            <div class="col-xs-6 col-sm-3 col-md-3 col-lg-3">
                <img class="img-responsive" alt="" src="~/Content/Images/javascript.png" />
            </div>
            <div class="col-xs-6 col-sm-3 col-md-3 col-lg-3">
                <img class="img-responsive" alt="" src="~/Content/Images/programming.png" />
