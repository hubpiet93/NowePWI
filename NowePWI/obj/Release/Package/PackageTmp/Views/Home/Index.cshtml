<div class="modal fade modalne-omnie" id="modal-rejestrowanie" tabindex="-2" role="dialog" aria-labelledby="modalnerejestrowanie" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="modalnerejestrowanie">@Resource.Zarejestruj</h4>

            </div>
            <div class="modal-body">
                @if (!Request.IsAuthenticated)
                {
                    using (@Html.BeginForm("Register", "Home"))
                    {
                        @Html.AntiForgeryToken()

                        <div id="text-danger">
                            @Html.ValidationSummary()
                        </div>
                        <div class="row " style="padding-top: 10px;">
                            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4" style="margin-top:5px;">
                                <p class="text-muted text-right">@Html.LabelFor(o => o.RegisterViewModel.Email)</p>
                            </div>
                            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                                @Html.TextBoxFor(o => o.RegisterViewModel.Email, new { @class = "form-control", @placeholder = @Resource.Email })
                                <div class="text-danger">
                                    @Html.ValidationMessageFor(o => o.RegisterViewModel.Email)
                                </div>
                            </div>
                        </div>
                        <div class="row" style="padding-top: 10px;">
                            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4" style="margin-top:5px;">
                                <p class="text-muted text-right">@Html.LabelFor(o => o.RegisterViewModel.Password)</p>
                            </div>
                            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 input" data-toggle="tooltip" data-placement="top" title="@Resource.HasloInfo">
                                @Html.PasswordFor(o => o.RegisterViewModel.Password, new { @class = "form-control ", @placeholder = @Resource.Haslo })
                                <div class="text-danger ">
                                    @Html.ValidationMessageFor(o => o.RegisterViewModel.Password)
                                </div>
                            </div>
                        </div>
                        <div class="row" style="padding-top: 10px;">
                            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4" style="margin-top:5px;">
                                <p class="text-muted text-right">@Html.LabelFor(o => o.RegisterViewModel.ConfirmPassword)</p>
                            </div>
                            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 ">
                                @Html.PasswordFor(o => o.RegisterViewModel.ConfirmPassword, new { @class = "form-control", @placeholder = @Resource.HasloPotwierdz })
                                <div class="text-danger ">
                                    @Html.ValidationMessageFor(o => o.RegisterViewModel.ConfirmPassword)
                                </div>
                            </div>
                        </div>

                        <div class="row" style="text-align: center;padding:20px;">
                            <div>
                                <button type="submit" class="btn btn-default">

                                    @Resource.Zarejestruj

                                </button>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="jumbotron" style="text-align: center;margin-top:50px">
                        <h2 class="text-danger">@Resource.Juzjesteszalogowany</h2>
                    </div>
                }




            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Resource.Zamknij</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade modalne-omnie" id="modal-logowanie" tabindex="-2" role="dialog" aria-labelledby="modalnelogowanie" aria-hidden="true">
