<section id="omnie">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 omnie-nag">
                <h1>@Resource.Omnie</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 omnie-cialo wow bounceIn">
                <img id="me" class="img-circle img-responsive" alt="" src="~/Content/Images/me1.jpg" />
                <a class="btn btn-default " data-toggle="modal" data-target="#modal-me" href="#" role="button">@Resource.Czytaj</a>
            </div>

        </div>
    </div>

</section>




<section id="kontakt">
    <div class="container">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 kontakt-nag">
            <h1>@Resource.NapiszDoMnie</h1>
        </div>
        @using (@Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "mailform" }))
        {
            @Html.AntiForgeryToken()
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 col-inputs kotrolki">
                <div class="form-group">
                    @Html.TextBoxFor(model => model.EmailViewModelEmail.Title, new
                    {
                        @class = "form-control input-lg",
                        @placeholder = @Resource.Tytul
                    })
                    <h3>@Html.ValidationMessageFor(model => model.EmailViewModelEmail.Title)</h3>
                </div>
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 col-inputs">
                <div class="form-group">
                    @Html.TextAreaFor(model => model.EmailViewModelEmail.Message, new { @class = "form-control input-textarea", @placeholder = @Resource.Wiadomosc, @rows = "10" })
                    <h3> @Html.ValidationMessageFor(model => model.EmailViewModelEmail.Message)</h3>
                </div>

            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 row-btn">
                @if (Request.IsAuthenticated)
                {
                    <a class="btn btn-default send-btn " href="javascript:document.getElementById('mailform').submit()" role="button">@Resource.Wyslij</a>
                }
                else
                {
                    <h2>@Resource.MusiszZalogowac</h2>
                }

            </div>

        }
    </div>
</section>

<section id="stopka">
    <div class="container">
        <div class="row">
