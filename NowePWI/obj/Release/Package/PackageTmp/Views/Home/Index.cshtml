        <li data-target="#pokaz1" data-slide-to="1"></li>
        <li data-target="#pokaz1" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">

        <div class="item active">
            <img class="img-responsive" alt="" src="~/Content/Images/slajd1.jpg" />
        </div>
        <div class="item">
            <img class="img-responsive" alt="" src="~/Content/Images/slajd2.jpg" />
        </div>
        <div class="item">
            <img class="img-responsive" alt="" src="~/Content/Images/slajd3.jpg" />
        </div>

    </div>

