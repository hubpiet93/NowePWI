                            </div>
                            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                                @Html.TextBoxFor(o => o.LoginViewModel.Email, new { @class = "form-control", @placeholder = @Resource.Email })
                                <div class="text-danger">
                                    @Html.ValidationMessageFor(o => o.LoginViewModel.Email)
                                </div>
                            </div>
                        </div>
                        <div class="row" style="padding-top: 10px;">
                            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                                <p class="text-muted">@Html.LabelFor(o => o.LoginViewModel.Password)</p>
                            </div>
                            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 ">
                                @Html.PasswordFor(o => o.LoginViewModel.Password, new { @class = "form-control", @placeholder = @Resource.Haslo })
                                <div class="text-danger ">
                                    @Html.ValidationMessageFor(o => o.LoginViewModel.Password)
                                </div>
                            </div>
                        </div>
                        <div class="row" style="padding-top: 10px;">
                            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                                <p class="text-muted">@Html.LabelFor(m => m.LoginViewModel.RememberMe)</p>
                            </div>
                            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                                @Html.CheckBoxFor(m => m.LoginViewModel.RememberMe, new { @checked = "checked", @class = "checkbox" })
                                <div class="text-danger">
                                    @Html.ValidationMessageFor(o => o.LoginViewModel.RememberMe)
                                </div>
                            </div>
                        </div>

                        <div class="row" style="text-align: center">
                            <div>
                                <button type="submit" class="btn btn-default">

                                    @Resource.Zaloguj


                                </button>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="jumbotron" style="text-align: center; margin-top: 50px">
                        <h2 class="text-danger">@Resource.Juzjesteszalogowany</h2>
                    </div>
                }

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Resource.Zamknij</button>
            </div>
        </div>
    </div>
</div>
@try
