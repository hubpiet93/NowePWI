    {
        HttpCookie cookies = Request.Cookies.Get("torcik");
        value = cookies.Values.Get("Powiadomienie");
    }
    catch (Exception) //jezeli nie istnieje to wez ustaw byle co
    {
        value = "lalala";
    }

    if (value != "Zamknij")
    {
        @Html.Partial("_CookiesPoliticsPartial");
    }
}
catch (Exception)
{
    @Html.Partial("_CookiesPoliticsPartial");
}




@section ScriptsBottom
{

    <script>
        $('.send-btn').tooltip('show')
    </script>

    <script>
        $('.input').tooltip('show')
    </script>

    @if (null != TempData["errors"])
    {
        <script type="text/javascript">
            alert("@TempData["errors"]");
        </script>
    }
    <script>
        $(document).ready(function() {
            $("#ZamkniecieCookies").click(function(event) {
                $("#PoitykaCookiesInfo").slideUp();
                $.ajax({
                    type: "POST",
                    url: "/Home/CreateCookies",
                });


            });
        });
    </script>

    <script>

        $(document).ready(function () {
            $('a.pomoc[href^="#"]').on('click', function (e) {
                e.preventDefault();

                var target = this.hash,
                $target = $(target);

                $('html, body').stop().animate({
                    'scrollTop': $target.offset().top
                }, 2000, 'swing', function () {
                    window.location.hash = target;
                });
            });
        })
    </script>
}



